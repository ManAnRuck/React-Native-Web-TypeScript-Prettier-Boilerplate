{
  "name": "@myproject/controller",
  "version": "1.0.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "tslint --project tsconfig.json && yarn typecheck",
    "typecheck": "tsc --noEmit",
    "pre-commit": "yarn lint && yarn typecheck",
    "schema:download": "apollo schema:download --endpoint=http://localhost:4000/",
    "codegen:generate": "apollo codegen:generate --queries='./src/**/*.tsx' --schema=./schema.json --target=typescript --outputFlat ./src/schemaTypes.ts",
    "gen:types": "npm run schema:download && npm run codegen:generate"
  },
  "devDependencies": {
    "@types/node": "^10.11.4",
    "@types/react": "^16.0.36",
    "apollo": "^1.9.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@types/react-dom": "^16.0.9",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "react": "^16.5.2",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.5.2"
  }
}
