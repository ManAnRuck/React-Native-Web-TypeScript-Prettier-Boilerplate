{
  "extends": [
    "monorepo:react",
    "monorepo:storybook",
    "monorepo:graphqlcodegenerator",
    "monorepo:apollolink",
    "monorepo:apolloclient"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "packageNames": [
        "jest",
        "babel-jest",
        "@types/jest"
      ],
      "groupName": "jest packages"
    },
    {
      "packageNames": [
        "react",
        "@types/react",
        "react-dom"
      ],
      "groupName": "react packages"
    },
    {
      "branchPrefix": "renovate/app-",
      "paths": [
        "packages/app/package.json"
      ],
      "labels": [
        "app",
        "Renovate"
      ],
      "ignoreDeps": [
        "react-test-renderer",
        "react",
        "@â€‹types/react"
      ]
    },
    {
      "branchPrefix": "renovate/common-",
      "paths": [
        "packages/common/package.json"
      ],
      "labels": [
        "common",
        "Renovate"
      ]
    },
    {
      "branchPrefix": "renovate/controller-",
      "paths": [
        "packages/controller/package.json"
      ],
      "labels": [
        "controller",
        "Renovate"
      ]
    },
    {
      "branchPrefix": "renovate/server-",
      "paths": [
        "packages/server/package.json"
      ],
      "labels": [
        "server",
        "Renovate"
      ]
    },
    {
      "branchPrefix": "renovate/ui-",
      "paths": [
        "packages/ui/package.json"
      ],
      "labels": [
        "ui",
        "Renovate"
      ]
    },
    {
      "branchPrefix": "renovate/web-",
      "paths": [
        "packages/web/package.json"
      ],
      "labels": [
        "web",
        "Renovate"
      ]
    }
  ]
}