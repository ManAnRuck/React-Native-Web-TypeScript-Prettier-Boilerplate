{
  "extends": [
    "config:base",
    "monorepo:react",
    "monorepo:storybook",
    "monorepo:graphqlcodegenerator",
    "monorepo:apollolink",
    "monorepo:apolloclient"
  ],
  "packageRules": [
    {
      "branchPrefix": "renovate/app-",
      "paths": [
        "packages/app/package.json"
      ],
      "labels": [
        "app",
        "Renovate"
      ]
    },
    {
      "branchPrefix": "renovate/common-",
      "paths": [
        "packages/common/package.json"
      ],
      "labels": [
        "common",
        "Renovate"
      ]
    },
    {
      "branchPrefix": "renovate/controller-",
      "paths": [
        "packages/controller/package.json"
      ],
      "labels": [
        "controller",
        "Renovate"
      ]
    },
    {
      "branchPrefix": "renovate/server-",
      "paths": [
        "packages/server/package.json"
      ],
      "labels": [
        "server",
        "Renovate"
      ]
    }
    {
      "branchPrefix": "renovate/web-",
      "paths": [
        "packages/web/package.json"
      ],
      "labels": [
        "web",
        "Renovate"
      ]
    }
  ]
}