{
    "compilerOptions": {
        "allowJs": false,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,

        /** Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        /** Additional checks */
        // TODO unused vars workaround -> https://github.com/Microsoft/vscode-tslint/blob/master/tslint/README.md#faq
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["node_modules"]
}